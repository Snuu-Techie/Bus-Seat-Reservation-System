<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_below="@+id/search_drivers"
    android:layout_alignParentEnd="true"
    android:clickable="true"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/myOrange"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:id="@+id/route_card" >

    <RelativeLayout
        android:id="@+id/route_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >


        <TextView
            android:id="@+id/from_text"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/playfair_display"
            android:text="From : "
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/from_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="Mahalapye"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/from_text"
            android:textSize="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="2dp"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="To :"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/from_id"
            android:textSize="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/to_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/playfair_display"
            android:text="Mahalapye "
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/to_text"
            android:textSize="16dp"

            />

       />

    </RelativeLayout>


</androidx.cardview.widget.CardView>